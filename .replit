modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Build Extension"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "build_extension"

[[workflows.workflow]]
name = "Build Extension"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx tsc && echo \"Extension built successfully! The compiled JavaScript files are in the dist/ directory.\""

[[workflows.workflow]]
name = "build_extension"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install typescript --save-dev && npx tsc && ls -la dist/"

[deployment]
run = ["sh", "-c", "npx tsc && echo \"Extension built successfully! The compiled JavaScript files are in the dist/ directory.\""]
